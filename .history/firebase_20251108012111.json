{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "roastplus/out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**/*.{js,css,png,jpg,jpeg,gif,svg,ico,webmanifest,woff,woff2,ttf,eot}",
        "destination": "/$1"
      },
      {
        "source": "**/*.html",
        "destination": "/$1"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(webmanifest)",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/manifest+json"
          }
        ]
      },
      {
        "source": "**/*.js",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/javascript"
          }
        ]
      }
    ]
  }
}

